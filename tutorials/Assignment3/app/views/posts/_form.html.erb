<%= link_to "Back", posts_path, class: "btn btn-sm btn-primary mt-3" %>
<%= form_with model: @post do |form| %>
  <div>
  <% @post.errors.full_messages_for(:title).each do |message| %>
    <div><%= message %></div>
  <% end %>
    <%= form.label :title %><br>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div>
  <% @post.errors.full_messages_for(:description).each do |message| %>
    <div><%= message %></div>
  <% end %>
    <%= form.label :description %><br>
    <%= form.text_field :description, class: "form-control" %>
  </div>

  <div>
    <%= form.label :status %><br>
    <%= select(:post, :status, [["public", 0], ["private", 1]], class: 'form-control') %>
  </div>

  <div>
    <%= form.submit :Update, class: "btn btn-sm btn-success mt-3" %>
  </div>
<% end %>
